<%- include('header', {title: "Profil"}) -%>
<%- include('menu') -%>
<div class="container mt-5">
    <div class="row mb-5 col-12">
        <h1>Profilom</h1>
    </div>
    <div class="row">
        <div class="col-xl-6 col-md-12 shadow p-5 mb-5 bg-body rounded">
            <h4>Jelentkezéseim</h4>
            <div class="mt-5">
                <div
                        class="card mb-3"
                        style="max-width: 400px; margin-left: auto; margin-right: auto"
                >
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">
                            This is a wider card with supporting text below as a natural
                            lead-in to additional content. This content is a little bit
                            longer.
                        </p>
                        <a href="#" class="btn btn-danger">Lejelentkezés</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-md-12 shadow p-5 mb-5 bg-body rounded">
            <form method="post">
                <div class="mb-3 p-2">
                    <div class="form-floating">
                        <input
                                type="text"
                                class="form-control"
                                id="name"
                                placeholder="Felhasználónév"
                        />
                        <label for="name">Felhasználónév</label>
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <div class="form-floating">
                        <input
                                type="text"
                                class="form-control"
                                id="fullName"
                                placeholder="Teljes név"
                        />
                        <label for="fullName">Teljes név</label>
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <div class="form-floating">
                        <input
                                type="email"
                                class="form-control"
                                id="email"
                                placeholder="E-mail cím"
                        />
                        <label for="email">E-mail</label>
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <div class="form-floating">
                        <input
                                type="text"
                                class="form-control"
                                id="IDCard"
                                placeholder="Felhasználónév"
                        />
                        <label for="IDCard">Személyi igazolvány szám</label>
                    </div>
                </div>

                <div class="mb-3 p-2">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="inputGroupSelect"
                        >Mi vagy</label
                        >
                        <select class="form-select" id="inputGroupSelect">
                            <option selected>Válassz...</option>
                            <option value="1">Kolis</option>
                            <option value="2">VIK-es</option>
                            <option value="3">Külsős</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <div class="form-check">
                        <input
                                class="form-check-input"
                                type="checkbox"
                                value=""
                                id="hostelCard"
                        />
                        <label class="form-check-label" for="hostelCard">
                            Van kollégiumi kártyád?
                        </label>
                    </div>
                </div>

                <div class="mb-3 p-2">
                    <div class="form-floating">
                        <input
                                type="password"
                                class="form-control"
                                id="password"
                                placeholder="Jelszó"
                        />
                        <label for="password">Jelszó</label>
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <div class="form-floating">
                        <input
                                type="password"
                                class="form-control"
                                id="password2"
                                placeholder="Jelszó még egyszer"
                        />
                        <label for="password2">Jelszó még egyszer</label>
                    </div>
                </div>
                <div class="mb-3 p-2">
                    <button type="submit" class="btn btn-primary">
                        Adatok szerkesztése
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('footer') -%>
